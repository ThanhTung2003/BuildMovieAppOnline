<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    android:layout_marginEnd="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:background="@color/main_color">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageTvShow"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/logo_mytv"
            android:layout_marginStart="5dp"
            android:layout_width="110dp"
            android:layout_height="135dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvShow_name"
                android:layout_marginStart="5dp"
                android:text="Đường Tới Ngôi Vương (Mùa 2)"
                android:textSize="16sp"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShow_origin_name"
                android:layout_marginStart="5dp"
                android:text="Road To Kingdom: Ace Of Aceng:"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShow_year"
                android:layout_marginStart="5dp"
                android:text="2024"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShow_country"
                android:layout_marginStart="5dp"
                android:text="Hàn Quốc"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShow_episode_current"
                android:layout_marginStart="5dp"
                android:text="Hoàn tất (8/8)"
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvShow_time"
                android:layout_marginStart="5dp"
                android:text="Ngày cập nhật: 2024-10-28 "
                android:textSize="14sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:paddingStart="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.cardview.widget.CardView>